@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@model Timmer.Web.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img width="450" src="@Html.DisplayFor(model => model.Image)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewUsed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewUsed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StockNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StockNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hours)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EngineHorsePower)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EngineHorsePower)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Drive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Drive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductLocation.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductMake)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductMake.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPhotos)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ProductPhotos != null && Model.ProductPhotos.Count() > 0)
            {
                var ProductPhotos = Model.ProductPhotos.OrderBy(o => o.Order);
                foreach (var ProductPhoto in ProductPhotos)
                {
                    <img style="width:150px" src="@Html.DisplayFor(m=>ProductPhoto.PhotoURL)" class="img-thumbnail" alt="Cinque Terre">
                }
            }
            else
            {
                <span>Photo Not Available.</span>
            }
        </dd>
    </dl>
</div>
<div>

    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a> <span>|</span>
    }
    <a asp-action="Index">Back to List</a>
</div>
